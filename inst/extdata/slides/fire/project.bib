  author = {Pess{\^o}a, Ana Carolina M. and Anderson, Liana O. and Carvalho, Nath{\'a}lia S. and Campanharo, Wesley A. and Junior, Celso H. L. Silva and Rosan, Thais M. and Reis, Jo{\~a}o B. C. and Pereira, Francisca R. S. and Assis, Mauro and Jacon, Aline D. and Ometto, Jean P. and Shimabukuro, Yosio E. and Silva, Camila V. J. and {Pontes-Lopes}, Aline and Morello, Thiago F. and Arag{\~a}o, Luiz E. O. C.},
  year = {2020},
