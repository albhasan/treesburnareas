  file = {/home/alber/Zotero/storage/39E9UM6H/sciadv.abd2713_sm.pdf;/home/alber/Zotero/storage/Z4MC2XAK/Andela et al. - 2022 - Tracking and classifying Amazon fire events in nea.pdf}
