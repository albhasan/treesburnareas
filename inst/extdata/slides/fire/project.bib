@article{morton2011,
  title = {Mapping Canopy Damage from Understory Fires in {{Amazon}} Forests Using Annual Time Series of {{Landsat}} and {{MODIS}} Data},
  author = {Morton, Douglas C. and DeFries, Ruth S. and Nagol, Jyoteshwar and Souza, Carlos M. and Kasischke, Eric S. and Hurtt, George C. and Dubayah, Ralph},
